<% layout('layouts/boilerplate') %>

<div class="container">
    <h1 class="text-center">New Post</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/blog" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <!-- enctype="multipart/form-data" might be needed -->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="blog[description]" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Choose image(s)...</label>
                <input class="form-control-file" type="file" id="image" name="image" multiple>
              </div>

            <div class="mb-3">
                <label class="form-label" for="description">Text</label>
                <textarea class="form-control" type="text" id="text" name="blog[text]" required></textarea>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="mb-3"><button class="btn btn-success">Post</button></div> 
        </form>
        <a href="/blog">All Posts</a>
    </div>
</div>